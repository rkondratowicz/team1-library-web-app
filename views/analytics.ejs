        document.querySelectorAll('[id^="filter"]').forEach(filter => {
            filter.addEventListener('click', function() {
                document.querySelectorAll('[id^="filter"]').forEach(f => f.classList.remove('active'));
                this.classList.add('active');
                console.log('Time range filter changed to:', this.textContent);
                // Future: Implement actual filtering
            });
        });
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/output.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-base-100">
    <!-- Navigation Bar -->
    <div class="navbar bg-primary text-primary-content shadow-lg sticky top-0 z-40">
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"></path>
                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-primary rounded-box w-52">
                    <li><a href="/" class="text-primary-content font-bold"><i class="fas fa-home mr-2"></i>Home</a></li>
                    <li><a href="/books" class="text-primary-content"><i class="fas fa-book mr-2"></i>Books</a></li>
                    <li><a href="/members" class="text-primary-content"><i class="fas fa-users mr-2"></i>Members</a></li>
                    <li><a href="/borrowing" class="text-primary-content"><i class="fas fa-exchange-alt mr-2"></i>Borrowing</a></li>
                    <li><a href="/analytics" class="text-primary-content"><i class="fas fa-chart-line mr-2"></i>Analytics</a></li>
                </ul>
            </div>
            <a href="/" class="btn btn-ghost text-xl">
                <i class="fas fa-book-open mr-2"></i>
                Library Management
            </a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                <li><a href="/" class="text-primary-content font-bold"><i class="fas fa-home mr-2"></i>Home</a></li>
                <li><a href="/books" class="text-primary-content"><i class="fas fa-book mr-2"></i>Books</a></li>
                <li><a href="/members" class="text-primary-content"><i class="fas fa-users mr-2"></i>Members</a></li>
                <li><a href="/borrowing" class="text-primary-content"><i class="fas fa-exchange-alt mr-2"></i>Borrowing</a></li>
                <li><a href="/analytics" class="text-primary-content"><i class="fas fa-chart-line mr-2"></i>Analytics</a></li>
            </ul>
        </div>
        <div class="navbar-end">
        </div>
    </div>

    <!-- Hero Section -->
    <div class="hero min-h-96 bg-gradient-to-r from-primary to-secondary">
        <div class="hero-content text-center text-primary-content">
            <div class="max-w-md">
                <h1 class="mb-5 text-5xl font-bold">Welcome to <%= title %></h1>
                <p class="mb-5">Your comprehensive library management solution. Manage books, members, borrowing, and generate insightful reports - all in one modern, intuitive platform.</p>
                <button class="btn btn-primary btn-lg" onclick="scrollToFeatures()">Get Started</button>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div id="features" class="container mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold text-center mb-12">Library Management Features</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Books Section Card -->
            <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <div class="card-body text-center">
                    <div class="text-4xl text-primary mb-4">
                        <i class="fas fa-book"></i>
                    </div>
                    <h3 class="card-title justify-center text-xl mb-2">Books Catalog</h3>
                    <p class="text-base-content/70 mb-4">Comprehensive book management with advanced search, categorization, and copy tracking capabilities.</p>
                    <div class="card-actions justify-center">
                        <a href="/books" class="btn btn-primary">
                            <i class="fas fa-arrow-right mr-2"></i>
                            Manage Books
                        </a>
                    </div>
                </div>
            </div>

            <!-- Members Section Card -->
            <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <div class="card-body text-center">
                    <div class="text-4xl text-secondary mb-4">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="card-title justify-center text-xl mb-2">Member Profiles</h3>
                    <p class="text-base-content/70 mb-4">Complete member management system with profiles, borrowing history, and membership tracking.</p>
                    <div class="card-actions justify-center">
                        <a href="/members" class="btn btn-secondary">
                            <i class="fas fa-arrow-right mr-2"></i>
                            Manage Members
                        </a>
                    </div>
                </div>
            </div>

            <!-- Borrowing Section Card -->
            <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <div class="card-body text-center">
                    <div class="text-4xl text-accent mb-4">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                    <h3 class="card-title justify-center text-xl mb-2">Borrowing System</h3>
                    <p class="text-base-content/70 mb-4">Streamlined check-out and check-in processes with transaction history and due date management.</p>
                    <div class="card-actions justify-center">
                        <a href="/borrowing" class="btn btn-accent">
                            <i class="fas fa-arrow-right mr-2"></i>
                            Manage Borrowing
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reports Section Card -->
            <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <div class="card-body text-center">
                    <div class="text-4xl text-info mb-4">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h3 class="card-title justify-center text-xl mb-2">Analytics & Reports</h3>
                    <p class="text-base-content/70 mb-4">Comprehensive reporting with statistics, analytics dashboards, and data visualization.</p>
                    <div class="card-actions justify-center">
                        <a href="/reports" class="btn btn-info">
                            <i class="fas fa-arrow-right mr-2"></i>
                            View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Overview Section -->
    <div class="bg-base-200 py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Library Overview</h2>
            <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
                <div class="stat">
                    <div class="stat-figure text-primary">
                        <i class="fas fa-book text-3xl"></i>
                    </div>
                    <div class="stat-title">Total Books</div>
                    <div class="stat-value text-primary"><%= stats.totalBooks %></div>
                    <div class="stat-desc">In the catalog</div>
                </div>
                
                <div class="stat">
                    <div class="stat-figure text-secondary">
                        <i class="fas fa-users text-3xl"></i>
                    </div>
                    <div class="stat-title">Active Members</div>
                    <div class="stat-value text-secondary"><%= stats.totalMembers %></div>
                    <div class="stat-desc">Registered users</div>
                </div>
                
                <div class="stat">
                    <div class="stat-figure text-accent">
                        <i class="fas fa-hand-holding text-3xl"></i>
                    </div>
                    <div class="stat-title">Books Borrowed</div>
                    <div class="stat-value text-accent"><%= stats.booksCurrentlyBorrowed %></div>
                    <div class="stat-desc">Currently on loan</div>
                </div>
                
                <div class="stat">
                    <div class="stat-figure text-info">
                        <i class="fas fa-check-circle text-3xl"></i>
                    </div>
                    <div class="stat-title">Available Books</div>
                    <div class="stat-value text-info"><%= stats.availableBooks %></div>
                    <div class="stat-desc">Ready to borrow</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-200 text-base-content">
        <div>
            <i class="fas fa-book-open text-4xl text-primary"></i>
            <p class="font-bold">
                Library Management System
            </p>
            <p>Modern, efficient, and user-friendly library management solution</p>
        </div>
        <div>
            <div class="grid grid-flow-col gap-4">
                <a class="link link-hover">About</a>
                <a class="link link-hover">Contact</a>
                <a class="link link-hover">Help</a>
                <a class="link link-hover">Privacy</a>
            </div>
        </div>
    </footer>

    <script>
        // Smooth scroll to features
        function scrollToFeatures() {
            document.getElementById('features').scrollIntoView({ behavior: 'smooth' });
        }

        // Statistics are now server-side rendered, but we can still provide
        // real-time updates if needed via the analytics API endpoints
        async function refreshStatistics() {
            try {
                const response = await fetch('/api/analytics/stats');
                if (response.ok) {
                    const stats = await response.json();
                    // Update the displayed values if we want real-time updates
                    document.querySelector('.stat-value.text-primary').textContent = stats.totalBooks;
                    document.querySelector('.stat-value.text-secondary').textContent = stats.totalMembers;
                    document.querySelector('.stat-value.text-accent').textContent = stats.booksCurrentlyBorrowed;
                    document.querySelector('.stat-value.text-info').textContent = stats.availableBooks;
                }
            } catch (error) {
                console.error('Error refreshing statistics:', error);
            }
        }

        // Optional: Auto-refresh every 30 seconds for real-time updates
        // Uncomment if you want live updates
        // setInterval(refreshStatistics, 30000);
    </script>
</body>
</html>
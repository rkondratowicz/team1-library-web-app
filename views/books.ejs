                ? `<button class="btn btn-success btn-xs rent-copy-btn" data-copy-id="${firstAvailableCopy.copyID}" data-isbn="${book.bookISBN || book.ISBN}">
                     <i class="fas fa-plus mr-1"></i>Rent Copy #${firstAvailableCopy.copyID}

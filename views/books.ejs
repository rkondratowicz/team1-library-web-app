                        <div class="badge badge-primary badge-outline">${book.PublicationYear || 'Unknown'}</div>
                    </td>
                    <td class="max-w-xs">
                        <div class="flex flex-wrap gap-1">
                            ${genreBadges}
                        </div>
                    </td>
                    <td class="max-w-xs">
                        <div class="mb-1">${description}</div>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-copy text-xs"></i>
                            ${copyStatusBadge}
                        </div>

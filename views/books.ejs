            let isbn = '';
            for (let i = 0; i < 13; i++) {
                isbn += Math.floor(Math.random() * 10);
            }
            document.getElementById('ISBN').value = isbn;
        }

        function editBook(isbn) {
            console.log('editBook called with ISBN:', isbn);
            const book = allBooks.find(b => b.ISBN === isbn);
            console.log('Found book:', book);
            
            if (book) {
                document.getElementById('editTitle').value = book.Title;
                document.getElementById('editAuthor').value = book.Author;
                document.getElementById('editPublicationYear').value = book.PublicationYear;
                document.getElementById('editDescription').value = book.Description || '';
                document.getElementById('editISBN').value = book.ISBN;
                
                console.log('About to show edit modal...');
                console.log('Current allGenres state before edit:', allGenres);
                console.log('Book genres:', book.genres);
                
                // Force reload genres if empty before opening modal
                if (!allGenres || allGenres.length === 0) {
                    console.log('No genres loaded, loading them first...');
                    loadGenres().then(() => {
                        console.log('Genres loaded, now opening edit modal');
                        editBookModal.showModal();
                        setTimeout(() => {
                            populateGenreDropdowns();
                            setEditGenres(book.genres || []);
                        }, 100);
                    });
